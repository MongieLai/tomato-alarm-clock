.container{
  height: 100vh;
  width: 100vw;
  background: #f6f6f6;
  display: flex;
  flex-direction:column;
}

.container .header{
  height: 170rpx;
  background: #fff;
  display: flex;
  align-items: center;
  color: #FE996F;
  font-size: 22rpx;
  padding:0 45rpx;
  margin-bottom: 24rpx;
}

.header .userPortrait{
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 20rpx;
}

.header .details{
  display: flex;
  flex-direction: column;
  justify-content: center;
  flex: 1;
}

.header .details .name {
  color: black;
  font-size: 32rpx;
  padding-bottom: 22rpx;
}

.feedback::after{
  border:none;
}

.header .feedback{
  background:transparent;
  color: #fe996f;
  font-size: 24rpx;
}

.container .tabs{
  background: #fff;
  color:#333;
  display: flex;
  justify-content: space-around;
  font-size: 28rpx;
  padding:20rpx 0;
  margin-bottom: 24rpx;
}

.tabs view{
  /* height: 100%; */
  position: relative;
}
.tabs view.hover-active{
  opacity: 0.5;
}

.tabs view.active::after{
  content: "";
  width: 100%;
  height: 8rpx;
  position: absolute;
  left: 50%;
  bottom: -20rpx;
  transform:translateX(-50%);
  background: #FE996F;
}

.container .dataList{
  padding: 0 24rpx;
  box-sizing: border-box;
  overflow: scroll;
  flex: 1;
}

.container .dataList .item{
  background: #fff;
  font-size: 32rpx;
  color: #333;
  border-radius: 8rpx;
  padding: 16rpx 28rpx 35rpx 40rpx;
  box-shadow: 0rpx 2rpx 6rpx 0rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 32rpx;
}

.container .dataList .item .time{
  font-size: 38rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
}

.container .dataList .item .content{
  display: flex;
  padding-bottom: 24rpx;
}

.container .dataList .item .content text{
  padding-right: 25rpx;
}

.container .dataList .item .content .detail{
  flex: 1;
  flex-wrap: wrap;
}