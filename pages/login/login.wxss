.login-wrapper {
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  background: #EEF7F6;
}

.login-wrapper .userPortrait {
  width: 250rpx;
  height: 250rpx;
  overflow: hidden;
  border-radius: 50%;
  border: 16rpx solid #F6705A;
  margin-bottom: 20rpx;
  margin-top: 283rpx;
}

.login-wrapper .details {
  color: #F6705A;
  font: 38rpx;
  position: relative;
  display: flex;
  justify-content: center;
  margin-bottom: 60rpx;
  width: 100%;
}

.login-wrapper .details::after {
  content: "";
  font: 38rpx;
  width: 20%;
  height: 4rpx;
  left: 50%;
  bottom: -10rpx;
  position: absolute;
  background: #F6705A;
  transform: translateX(-50%);
}

.login-button {
  width: 360rpx;
  height: 80rpx;
  border-radius: 16rpx;
  color: #fff;
  font-size: 26rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: linear-gradient(to right, #EF9B75, #F6705A);
}

.login-button::after {
  border: none;
}

.login-button.login-button-active {
  opacity: 0.6;
}

.login-wrapper .binding{
  color: #F6705A;
  font-size: 24rpx;
  margin-top: 46rpx;
}